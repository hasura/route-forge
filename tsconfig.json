{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "typeRoots" : ["node_modules/@types"],
    "lib": ["es6", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
